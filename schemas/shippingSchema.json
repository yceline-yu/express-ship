{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://localhost3000/shipments.schema.json",
    "title": "Shipment",
    "description": "new Shipping order",
    "type": "object",
    "properties": {
        "productId": {
            "type": "integer",
            "minimum": 1000
        },
        "name": {"type": "string"},
        "addr": { "type": "string"},
        "zip": {"type": "string"}
    },
    "additionalProperties": false,
    "required": [
        "productId",
        "name",
        "addr",
        "zip"
    ]
}